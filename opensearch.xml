<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription
  xmlns="http://a9.com/-/spec/opensearch/1.1/"
  xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  
  <ShortName>Open Parliament TV</ShortName>
  <Description>Search parliamentary speeches and debates</Description>
  <InputEncoding>UTF-8</InputEncoding>
  
  <!-- Icons -->
  <Image width="16" height="16" type="image/x-icon">/content/client/images/favicon.ico</Image>
  <Image width="64" height="64" type="image/png">/content/client/images/apple-touch-icon.png</Image>
  
  <!-- Search URL template - uses existing search page -->
  <Url type="text/html" template="/search?q={searchTerms}"/>
  
  <!-- Search suggestions URL template - uses OpenSearch format -->
  <Url type="application/x-suggestions+json" template="/api/v1/?action=autocomplete&amp;itemType=opensearch&amp;q={searchTerms}"/>
  
  <!-- Self-referencing URL for automatic updates -->
  <Url type="application/opensearchdescription+xml" rel="self" template="/opensearch.xml"/>
  
  <!-- Additional search parameters -->
  <moz:SearchForm>/search</moz:SearchForm>
  
  <!-- Language support -->
  <Language>de</Language>
  <Language>en</Language>
  
  <!-- Output encoding -->
  <OutputEncoding>UTF-8</OutputEncoding>
  
  <!-- Tags for categorization -->
  <Tags>parliament politics democracy speeches debates</Tags>
  
  <!-- Attribution -->
  <Attribution>Open Parliament TV</Attribution>
  
  <!-- Syndication rights -->
  <SyndicationRight>open</SyndicationRight>
  
  <!-- Adult content filter -->
  <AdultContent>false</AdultContent>
  
  <!-- Language detection -->
  <LanguageDetection>true</LanguageDetection>
  
</OpenSearchDescription> 